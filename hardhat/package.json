{
  "name": "rather-cake-pay-hardhat",
  "version": "1.0.0",
  "description": "Hardhat project for Rather Cake Pay smart contracts",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile && npm run copy:abi",
    "test": "hardhat test",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'",
    "format:check": "prettier --check 'contracts/**/*.sol'",
    "deploy:ignition": "hardhat ignition deploy ignition/modules/CakeFactory.js",
    "deploy:ignition:localhost": "hardhat ignition deploy ignition/modules/CakeFactory.js --network localhost",
    "deploy:ignition:sepolia": "hardhat ignition deploy ignition/modules/CakeFactory.js --network sepolia",
    "deploy:ignition:base-sepolia": "hardhat ignition deploy ignition/modules/CakeFactory.js --network baseSepolia",
    "deploy:tokens": "hardhat run scripts/deployTokens.ts",
    "deploy:tokens:base-sepolia": "hardhat run scripts/deployTokens.ts --network baseSepolia",
    "deploy:tokens:sepolia": "hardhat run scripts/deployTokens.ts --network sepolia",
    "deploy:tokens:localhost": "hardhat run scripts/deployTokens.ts --network localhost",
    "create:pool": "hardhat run scripts/createPool.ts",
    "create:pool:base-sepolia": "hardhat run scripts/createPool.ts --network baseSepolia",
    "create:pool:sepolia": "hardhat run scripts/createPool.ts --network sepolia",
    "create:pool:localhost": "hardhat run scripts/createPool.ts --network localhost",
    "node": "hardhat node",
    "copy:abi": "mkdir -p ../frontend/public/contracts && cp artifacts/contracts/CakeFactory.sol/CakeFactory.json ../frontend/public/contracts/"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "dotenv": "^17.2.3",
    "hardhat": "^2.19.0",
    "hardhat-preprocessor": "^0.1.5",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@uniswap/permit2": "github:uniswap/permit2",
    "@uniswap/universal-router": "github:uniswap/universal-router",
    "@uniswap/v2-core": "github:uniswap/v2-core",
    "@uniswap/v3-core": "github:uniswap/v3-core",
    "@uniswap/v3-periphery": "^1.4.4",
    "@uniswap/v4-core": "github:uniswap/v4-core",
    "@uniswap/v4-periphery": "github:uniswap/v4-periphery",
    "openzeppelin-solidity": "github:OpenZeppelin/openzeppelin-contracts",
    "solmate": "^6.8.0"
  }
}
