{
  "name": "rather-cake-pay-hardhat",
  "version": "1.0.0",
  "description": "Hardhat project for Rather Cake Pay smart contracts",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile && npm run copy:abi",
    "test": "hardhat test",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'",
    "format:check": "prettier --check 'contracts/**/*.sol'",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:base-sepolia": "hardhat run scripts/deploy.js --network baseSepolia",
    "deploy:ignition": "hardhat ignition deploy ignition/modules/CakeFactory.js",
    "deploy:ignition:localhost": "hardhat ignition deploy ignition/modules/CakeFactory.js --network localhost",
    "deploy:ignition:sepolia": "hardhat ignition deploy ignition/modules/CakeFactory.js --network sepolia",
    "deploy:ignition:base-sepolia": "hardhat ignition deploy ignition/modules/CakeFactory.js --network baseSepolia",
    "node": "hardhat node",
    "copy:abi": "mkdir -p ../frontend/public/contracts && cp artifacts/contracts/CakeFactory.sol/CakeFactory.json ../frontend/public/contracts/"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "dotenv": "^17.2.3",
    "hardhat": "^2.19.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.3.0"
  }
}
